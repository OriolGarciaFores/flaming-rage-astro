---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Pagina web representada por un clan muy antiguo nacido en un MMORPG. Web orientada a todo tipo de guias."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/alts.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		font-family: sans-serif;
		font-size: 16px;
		background-color: hsl(240, 4%, 9%);
		color: white;
	}

	body h1,
	body h3,
	body h4,
	body h5,
	body h6 {
		font-weight: 600;
	}

	main {
		min-height: 100vh;
	}

	.text-flaming {
		background: linear-gradient(to right, #ffe300 0%, #e25822 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.container {
		padding: 0 1rem;
		margin: 0 auto;
	}

	.lista-circular {
      list-style-type: circle;
      margin-left: 1rem; 
    }
</style>
